Plug 'easymotion/vim-easymotion'
Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
Plug 'preservim/nerdtree'
Plug 'vim-scripts/ReplaceWithRegister'
Plug 'vim-scripts/argtextjob.vim'

set sneak
set quickscope
set argtextobj
set which-key
set notimeout

let g:WhichKey_FontSize = 20
let g:WhichKey_CommandColor = "#41ead4"
let g:WhichKey_PrefixColor = "#f335b2"



let mapleader=" "

set scrolloff=1000
set incsearch
set hlsearch
set ignorecase
set smartcase
set relativenumber
set number
set autoindent
set nowrap
set history=1000
set showcmd
set showmode
set visualbell
set signcolumn=yes
set backspace=indent,eol,start
set clipboard+=unnamedplus
set clipboard+=unnamed
set clipboard+=ideaput
set splitright
set splitbelow
set iskeyword+=-

set ideajoin
set idearefactormode=keep
set ideastatusicon=gray



map Q gq
nnoremap H <nop>
inoremap jk <Esc>
vnoremap ő <gv
vnoremap ú >gv

nnoremap <leader>n :nohlsearch<CR>

nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz

nnoremap <C-o> <C-o>zz
nnoremap <C-i> <C-i>zz

nnoremap n nzzzv
nnoremap N Nzzzv

vnoremap J :m '>+1<CR>gv=gv
vnoremap K :m '<-2<CR>gv=gv

vnoremap x "_x
nnoremap x "_x
vnoremap <leader>d "_d
vnoremap <leader>c "_c
vnoremap <leader>p "_dP

nnoremap <leader>rr :action Run<CR>
nnoremap <leader>dd :action Debug<CR>
nnoremap <leader>rc :action ContextRun<CR>
nnoremap <leader>dc :action ContextDebug<CR>

nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l
nnoremap <C-k> <C-w>k
nnoremap <C-j> <C-w>j

nnoremap <C-t> :action ActivateTerminalToolWindow<CR>
nnoremap <leader>t :action Terminal.OpenInTerminal<CR>

nnoremap zc :action CollapseRegion<CR>
nnoremap zo :action ExpandRegion<CR>

nnoremap <leader>fs :action FileStructurePopup<CR>
nnoremap <leader>e :action RecentFiles<CR>
nnoremap <leader>h :action CallHierarchy<CR>
nnoremap <leader>rl :action RecentLocations<CR>
nnoremap <leader>lh :action LocalHistory.ShowHistory<CR>

nnoremap <C-o> :action Back<CR>
nnoremap <C-i> :action Forward<CR>

nnoremap rn :action RenameElement<CR>
nnoremap rm :action ExtractMethod<CR>
nnoremap rv :action IntroduceVariable<CR>
nnoremap rf :action IntroduceField<CR>
nnoremap rs :action ChangeSignature<CR>
nnoremap rp :action Refactorings.QuickListPopupAction<CR>

nnoremap gd :action GotoDeclaration<CR>
nnoremap gt :action GotoTypeDeclaration<CR>
nnoremap gs :action ShowUsages<CR>
nnoremap <leader>gs :action FindUsages<CR>
nnoremap gi :action GotoImplementation<CR>
nnoremap ga :action ShowErrorDescription<CR>
nnoremap gk :action GotoNextError<CR>
nnoremap gj :action GotoPreviousError<CR>
nnoremap ca :action ShowIntentionActions<CR>
nnoremap K :action QuickJavaDoc<CR>

nnoremap ú :action MethodUp<CR>
nnoremap ő :action MethodDown<CR>
nnoremap ó :action MoveStatementUp<CR>
nnoremap ü :action MoveStatementDown<CR>
nnoremap sj :action MoveElementLeft<CR>
nnoremap sk :action MoveElementRight<CR>

nnoremap <leader>dp :action ToggleLineBreakpoint<CR>
nnoremap <leader>dt :action ActivateDebugToolWindow<CR>
nnoremap <leader>de :action EvaluateExpression<CR>
nnoremap <leader>dm :action XDebugger.MuteBreakpoints<CR>

nnoremap <leader>gc :action CheckinProject<CR>
nnoremap <leader>gb :action Git.Branches<CR>
nnoremap <leader>sm :action MaximizeEditorInSplit<CR>
nnoremap <leader>wn :action MoveEditorToOppositeTabGroup<CR>

nnoremap fe :NERDTree<CR>
nnoremap fv :action SelectInProjectView<CR>

