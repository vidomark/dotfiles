" Plugin management
Plug 'easymotion/vim-easymotion'
Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
Plug 'preservim/nerdtree'
Plug 'vim-scripts/ReplaceWithRegister'
Plug 'vim-scripts/argtextjob.vim'

set sneak
set quickscope
set argtextobj



" Settings
let mapleader=" "

set scrolloff=1000
set incsearch
set hlsearch
set ignorecase
set smartcase
set relativenumber
set number
set autoindent
set nowrap
set history=1000
set showcmd
set showmode
set visualbell
set signcolumn=yes
set backspace=indent,eol,start
set clipboard+=unnamedplus
set clipboard+=unnamed
set clipboard+=ideaput
set splitright
set splitbelow
set iskeyword+=-

set ideajoin
set idearefactormode=normal
set ideastatusicon=gray



" Mappings
map Q gq
nnoremap H <nop>
inoremap jk <Esc>
vnoremap < <gv
vnoremap > >gv

nnoremap<leader><Esc> :nohlsearch<CR>

nnoremap<C-d> <C-d>zz
nnoremap<C-u> <C-u>zz

nnoremap<C-o> <C-o>zz
nnoremap<C-i> <C-i>zz

nnoremap n nzzzv
nnoremap N Nzzzv

vnoremap J :m '>+1<CR>gv=gv
vnoremap K :m '<-2<CR>gv=gv

vnoremap x, "_x
vnoremap<leader>d "_d
vnoremap<leader>c "_c
vnoremap<leader>p "_dP

nnoremap<leader>r: action Run<CR>
nnoremap<leader>d :action Debug<CR>
nnoremap<leader>rr :action ContextRun<CR>
nnoremap<leader>dd :action ContextDebug<CR>

nnoremap<C-t> :action ActivateTerminalToolWindow<CR>
nnoremap<leader>t :action Terminal.OpenInTerminal<CR>

nnoremap<leader>cr :action CollapseRegion<CR>
nnoremap<leader>er :action ExpandRegion<CR>

nnoremap<leader>fs :action FileStructurePopup<CR>
nnoremap<leader>u :action FindUsages<CR>
nnoremap<leader>é :action RecentFiles<CR>
nnoremap<leader>h :action CallHierarchy<CR>
nnoremap<leader>rl :action RecentLocations<CR>
nnoremap<leader>lh :action LocalHistory.ShowHistory<CR>

nnoremap<C-o> :action Back<CR>
nnoremap<C-i> :action Forward<CR>

nnoremap<C-h> :action PreviousTab<CR>
nnoremap<C-l> :action NextTab<CR>
nnoremap<leader>x :action CloseContent<CR>

nnoremap<leader>rn :action RenameElement<CR>
nnoremap<leader>rm :action ExtractMethod<CR>
nnoremap<leader>rv :action IntroduceVariable<CR>
nnoremap<leader>rf :action IntroduceField<CR>
nnoremap<leader>rs :action ChangeSignature<CR>
nnoremap<leader>rp :action Refactorings.QuickListPopupAction<CR>

nnoremap <leader>gd :action GotoDeclaration<CR>
nnoremap <leader>gy :action GotoTypeDeclaration<CR>
nnoremap <leader>gi :action GotoImplementation<CR>
nnoremap <leader>gu :action ShowUsages<CR>
nnoremap <leader>gt :action GotoTest<CR>

nnoremap ú :action MethodUp<CR>
nnoremap ő :action MethodDown<CR>

nnoremap<leader>bp :action ToggleLineBreakpoint<CR>
nnoremap<leader>bt :action ActivateDebugToolWindow<CR>
nnoremap<leader>be :action EvaluateExpression<CR>
nnoremap<leader>bm :action XDebugger.MuteBreakpoints<CR>

nnoremap<leader>gc :action CheckinProject<CR>
nnoremap<leader>gs :action ActivateVersionControlToolWindow<CR>
nnoremap<leader>gb :action Git.Branches<CR>

nnoremap<leader>ek :action GotoNextError<CR>
nnoremap<leader>ej :action GotoPreviousError<CR>
nnoremap<leader>ef :action ShowErrorDescription<CR>

nnoremap<leader>1 :NERDTree<CR>
